#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).
# falta cambiar para que se apague cuando no tiene bateria

case $BUTTON in
	3) notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Scroll to change adjust xbacklight." ;;
	4) xbacklight -inc 10 ;;
	5) xbacklight -dec 10 ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac


colRed="^c#FF0505^"
colGreen="^c#05FF45^"
colYellow="^c#CFD05B^"
colBlue="^c#647FEA^"

# for for each battery attached to the system
for battery in /sys/class/power_supply/BAT?*; do
	capacity=$(cat "$battery/capacity")
	[ -n "${capacity+x}" ] && printf " "
	case "$(cat "$battery/status")" in
		"Full")
			status = "ï‰€" ;
			bgcolor="$colGreen"
			;;
		"Discharging")
			if [ "$capacity" -le 5 ]
			then
				shutdown now
			elif [ "$capacity" -le 10 ]
			then
				bgcolor="$colRed"
				status="ï‰„"
				aplay ~/Sounds/Tornado_Siren_II-Delilah-747233690.wav
			elif [ "$capacity" -le 35 ]
			then
				bgcolor="$colYellow"
				status="ï‰ƒ"
			elif [ "$capacity" -le 60 ]
			then
				bgcolor="$colGreen"
				status="ï‰‚"
			elif [ "$capacity" -le 85 ]
			then
				bgcolor="$colGreen"
				status="ï‰"
			else
				bgcolor="$colGreen"
				status="ï‰€"
			fi
			;;

		"Charging")
			if [ "$capacity" -le 10 ]
			then
				bgcolor="$colRed"
				status="ï–…"
			elif [ "$capacity" -le 35 ]
			then
				bgcolor="$colYellow"
				status="ï–†"
			elif [ "$capacity" -le 60 ]
			then
				bgcolor="$colGreen"
				status="ï–ˆ"
			elif [ "$capacity" -le 85 ]
			then
				bgcolor="$colGreen"
				status="ï–ˆ"
			else
				bgcolor="$colGreen"
				status="ï–„"
			fi
			;;

		"Not charging") status="ï˜‹" ; bgcolor="$colBlue" ;;
		"Unknown") status="ï–" ; bgcolor="$colYellow" ;;
	esac
	printf "%s%s %d%%" "$bgcolor" "$status" "$capacity"; unset bgcolor ;
done && exit 0
